pipeline {
    agent any
    // parameters {
    //    run description: '', filter: 'SUCCESSFUL', name: 'PROMOTE_BUILD', projectName: 'Smarthome deployment'
    // }
    stages {
        stage("Release to production") {
            steps {
				withEnv(["PATH=$PATH:~/usr/local/bin/docker-compose"]){
					sh "docker-compose -p production -f docker-compose.yml -f docker-compose.prod.yml up -d"
				}
            }
        }
    }
}